<%= form_for(@article) do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>

      <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
<legend>New Article</legend>
<ol>
  <li>
    <%= f.label "Title" %>
    <%= f.text_field :art_title %>
  </li>
  <li>
    <%= f.label "Article Type" %>
    <%= f.text_field :art_type %>
  </li>
  <li>
    <%= f.label "Article Source" %>
    <%= f.text_field :art_source %>
  </li>
  <li>
    <%= f.label "Detail" %>
    <%= f.text_area :art_desc %>
  </li>
  <li>
    <%= f.label "Article Link" %>
    <%= f.text_field :art_link %>
  </li>
  <li>
    <%= f.label :art_flag %>
    <%= f.text_field :art_flag %>
  </li>
  <!--<li>
    <%= f.label :art_date %>
    <%= f.datetime_select :art_date %>
  </li>-->
  <li>
    <%= f.hidden_field :user_id, :value => session[:user].id %>
  </li>
  <li>
	<fieldset>
    <%= f.submit %>
    </fieldset>
  </li>
  </ol>
</fieldset>
<% end %>
