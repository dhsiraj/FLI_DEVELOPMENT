<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :blog_id %><br />
    <%= f.text_field :blog_id %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label :comment_title %><br />
    <%= f.text_field :comment_title %>
  </div>
  <div class="field">
    <%= f.label :comment_detail %><br />
    <%= f.text_field :comment_detail %>
  </div>
  <div class="field">
    <%= f.label :ip_address %><br />
    <%= f.text_field :ip_address %>
  </div>
  <div class="field">
    <%= f.label :comment_flag %><br />
    <%= f.text_field :comment_flag %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
